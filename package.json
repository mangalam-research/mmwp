    "eslint": "^5.16.0",
    "eslint-config-lddubeau-base": "^3.0.3",
    "expect-rejection": "^1.1.0",
    "json-loader": "^0.5.7",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-remap-coverage": "^0.1.5",
    "karma-serve-static-map": "^1.0.0",
    "karma-source-map-support": "^1.4.0",
    "karma-typescript-agile-preprocessor": "^2.1.2",
    "lite-server": "^2.4.0",
    "mocha": "^6.1.4",
    "ng-router-loader": "^2.1.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "tslint": "^5.16.0",
    "tslint-config-lddubeau": "^4.1.0",
    "typescript": "^3.4.5",
    "versync": "^4.1.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "scripts": {
    "tsc": "tsc -p src/tsconfig.json --outDir build/dev/lib",
    "copy-web": "mkdir -p build/dev/lib && cp -rp web/*.js web/*.html node_modules/wed-demo/dev/lib/kitchen-sink.js build/dev/lib",
    "copy-other": "mkdir -p build/dev/lib && (cd src; cp -r --parents `find . -type f -regex '.*\\(js\\|html\\|css\\|d.ts\\)$'` ../build/dev/lib)",
    "copy-dev": "npm run copy-web && npm run copy-other",
    "build-dev": "npm run copy-dev && npm run tsc",
    "ngc": "ngc -p src/tsconfig-aot.json",
    "create-aot-main": "sed -e 's/AppModule/AppModuleNgFactory/' -e 's/app\\.module/app\\.module\\.ngfactory/' -e 's/bootstrapModule/bootstrapModuleFactory/' build/aot/mmwp.js > build/aot/mmwp-aot.js",
    "fix-paths": "sed -i -e's;../../node_modules/;;g' `find build/aot -type f -name '*.js'`",
    "copy-prod": "mkdir -p build/aot && (cd src; cp -r --parents `find . -type f -regex '.*\\.\\(js\\|html\\|css\\)$'` ../build/aot/)",
    "build-prod": "npm run ngc && npm run create-aot-main && npm run copy-prod && npm run fix-paths && npm run copy-dev && webpack",
    "test": "karma start --single-run",
    "lint": "tslint --format verbose -p src/tsconfig.json -c src/tslint.json && tslint --format verbose -p test/tsconfig.json -c test/tslint.json && eslint '*.js' 'test/**/*.js' 'web/**/*.js' --ignore-pattern 'test/data/*.js' && versync -v",
    "posttest": "npm run lint",
    "build-and-test": "npm run build-dev && npm run test",
    "clean": "rm -rf build",
    "start": "lite-server -c bs-config.js",
    "start-dev": "lite-server -c bs-config-dev.js"
  }
}
